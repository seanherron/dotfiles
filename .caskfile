###############################################################################
# Sublime Text                                                                #
###############################################################################
echo "Setting up Sublime Text 3"

mkdir ~/Library/Application\ Support/Sublime\ Text\ 3/Installed\ Packages
wget -O ~/Library/Application\ Support/Sublime\ Text\ 3/Installed\ Packages/Package\ Control.sublime-package https://sublime.wbond.net/Package%20Control.sublime-package

# Install Sublime Text settings
cp -r ~/.sublime ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/User/Preferences.sublime-settings

# Install Sublime Text Package Control
cp -r ~/.sublime-packages ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/User/Package\ Control.sublime-settings